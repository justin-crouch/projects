{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": [{"path": "$HOME/com.git-blog.app"}, {"path": "$HOME/com.git-blog.app/**"}]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "store:default"
  ]
}
